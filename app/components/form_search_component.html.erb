<div class="card">
  <div class="card-header">
    <h3 class="card-title font-weight-bold text-uppercase">
      <%= title.present? ? title : '' %>
      <span class="badge badge-secondary"><%= subtitle.present? ? subtitle : '' %></span>
    </h3>
  </div>
  <%= form_with url: url, method: method, local: false, class: "", id: "form-search" do |f| %>
    <div class="card-body">
      <% @form_search = f %>
      <%= content %>
    </div>
    <div class="card-footer border-top">
      <div class="row justify-content-end">
        <div class="col-2">
        </div>
        <div class="col-2">
          <%= button_tag(type: "submit", class: "btn btn-primary btn-block text-uppercase font-weight-bold") do %>
            <i class="fas fa-search"></i>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
